<form action="/produce" method="post">
  <label><h3>Choose from available items</h3></label>

  <%ProduceDatabase.all.each do |produce|%>
  <label><%=produce.name%></label>
  <input type="checkbox" name="produce[name][]" value="<%=produce.name%>" id="produce_name"><br>
  <%end%>

  <input type="submit" value="Submit">
</form>
<br></br>
<form action="/produce/new" method="post">
  <h3>Don't see what you're looking for? Add it here:</h3>
  <input type="text" name="name" placeholder="name">
  <input type="text" name="shelf_life" placeholder="shelf life">
  <input type="submit" value="Add it!">
</form>
